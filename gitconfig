[user]
  name = Gustavo Caso
  email = gustavocaso@gmail.com
[core]
  excludesfile = ~/.gitignore_global
  editor = "vim"
[alias]
  tree  = log --graph --decorate --oneline --abbrev-commit
  lol   = log --pretty=format:'%h %s - %an, %ar ' --abbrev-commit --graph --decorate -n10
  s     = status
  aa    = add .
  bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs git branch -d; }; f"
  dsf   = "! git diff --color $@ | diff-so-fancy"
  pullf = "!f() { git fetch origin pull/$1/head:$2 && git checkout $2; }; f"
  nc    = diff --staged
  back  = checkout develop
  empty = commit --allow-empty
  amend = commit --amend
[push]
  default = current
[pull]
  default = current
[commit]
  gpgsign = true
  template = ~/.gitmessage
  cleanup = strip
[rebase]
  autosquash = true
