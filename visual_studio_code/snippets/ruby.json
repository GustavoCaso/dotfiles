	"Benchmark skeleton": {
		"prefix": "benchmark",
		"body": [
			"require 'bundler/inline'",
			"",
			"gemfile do",
				"\tsource 'https://rubygems.org'",
				"\tgem 'benchmark-ips'",
				"\tgem 'pry'",
			"end",
			"",
			"require 'benchmark/ips'",
			"",
			"Benchmark.ips do |x|",
			  "\tx.report('') {  }",
