{
    "breadcrumbs.enabled": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.sideBar.location": "left",
    "workbench.colorTheme": "Atom One Dark",
    "workbench.editor.enablePreview": false,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "task.autoDetect": "off",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.tabSize": 2,
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "top",
    "editor.fontLigatures": true,
    "editor.fontFamily": "Monoid",
    "editor.minimap.enabled": false,
    "editor.fontWeight": "400",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        ".bundle/**": true,
        ".byebug_history/**": true,
        ".dev/**": true,
        "node_modules/**": true,
        "**/.git": false,
    },
    "search.exclude": {
        "**/.git": true,
        "vendor/*": true,
        "node_modules/**": true,
        ".shadowenv.d/**": true,
        ".byebug_history/**": true,
        "tmp/**": true
    },
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,
    "extensions.ignoreRecommendations": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "ruby.intellisense": "rubyLocate",
    "ruby.codeCompletion": "rcodetools",
    "ruby.useBundler": true,
    "ruby.format": "rubocop",
    "ruby.useLanguageServer": true,
    "ruby.lint": {
        "rubocop": {
            "useBundler": true
        }
    },
    "ruby.locate": {
	    "include": "**/*.rb",
	    "exclude": "{**/@(test|spec|tmp|vendor|.*),**/@(test|spec|tmp|vendor|.*)/**,**/*_spec.rb}"
    },
    "go.buildOnSave": "off",
    "go.formatTool": "goimports",
    "go.lintOnSave": "file",
    "go.useLanguageServer": false,
    "C_Cpp.updateChannel": "Insiders",
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.search.location": "scm",
    "gitlens.blame.avatars": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.format": "${message}",
    "gitlens.hovers.avatars": false,
    "gitlens.blame.heatmap.location": "left",
    "gitlens.heatmap.toggleMode": "window",
    "gitlens.statusBar.command": "gitlens.toggleCodeLens"
}
